
<% include ../partials/headers %>



<div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1> Welcome to Adarsh Camps </h1>
                <p> Post/View camps from all over India </p>
                <p>
                        <a class="btn btn-success btn-large" href="/campgrounds/new">Add new camp</a>
                </p> 
            </div>
        </header>

        <div  class="row text-center" style="display:flex; flex-wrap: wrap;">
                <% campgrounds.forEach(function(campground) { %>
                    <div  class="col-md-3 col-sm-6 img-thumbnail">
                        <div >
                                <img class="img-thumbnail"  src="<%= campground.image%>">
                               <div class="caption" >
                                   <h5><%= campground.name %></h5>
                               </div>
                        </div>
                        <p>
                            <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">More info</a>
                        </p>
                    </div>
                  
                <% }) %> 
        </div>
</div>


<div class="container" >
        <% include ../partials/footer %> 
</div>


