
<% include ../partials/headers %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Adarsh Camps</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img style=" display: block; max-height: 500px; max-width:100%;  width: auto; height: auto;" class="img-responsive" src="<%= campground.image%>">
                <div class="caption-full">
                    <h4 class="pull-right"> $100 per night </h4>
                    <h4> <a href=""> <%= campground.name %> </a> </h4>
                    <p> <%= campground.description %></p>
                </div>
            </div>
            <hr>
            <div class="card">
                <div class="text-right">
                    <a class="btn btn-success btn-large" href="/campgrounds/<%= campground._id%>/comments/new">add new comment </a>
                </div>
                    <% campground.comments.forEach(function(comment) { %>
                        <div class="row">
                            <div class="col-md-12">
                                <b> <%= comment.author %> </b>
                                <span class="text-right">10 Days ago</span>
                                <p> <%= comment.text %> </p>
                            </div>
                        </div>
                        
                    <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
